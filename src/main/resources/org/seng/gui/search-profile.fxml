<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.seng.gui.SearchProfileController"
            prefWidth="700" prefHeight="450"
            styleClass="gradient-background">
    <children>
        <Label text="Search Profiles" layoutX="0" layoutY="10" prefWidth="700"
               alignment="CENTER" styleClass="title-label"/>
        <VBox layoutX="50" layoutY="80" prefWidth="600" spacing="15" styleClass="login-box">
            <TextField fx:id="searchField" promptText="Enter name to search..." styleClass="input-field"/>
            <ListView fx:id="resultsList" prefHeight="100"/>
            <Button fx:id="viewProfileButton" text="View Profile" styleClass="auth-button"/>
        </VBox>
    </children>
</AnchorPane>
