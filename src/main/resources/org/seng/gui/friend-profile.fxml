<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.seng.gui.FriendProfileController"
            prefWidth="700" prefHeight="450"
            styleClass="gradient-background">
    <children>
        <Label text="Friend Profile" layoutX="0" layoutY="10" prefWidth="700"
               alignment="CENTER" styleClass="title-label"/>
        <VBox layoutX="50" layoutY="80" prefWidth="600" spacing="15" styleClass="login-box">
            <HBox spacing="15">
                <Circle radius="25" fill="lightgray" stroke="gray" strokeWidth="2"/>
                <VBox spacing="5">
                    <Label fx:id="friendNameLabel" text="FriendName" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label fx:id="friendLastOnlineLabel" text="Last Online: ..." style="-fx-text-fill: #1d0e4d;"/>
                </VBox>
            </HBox>
            <HBox spacing="15">
                <Label text="Wins:" style="-fx-text-fill: #1d0e4d;"/>
                <Label fx:id="friendWinsLabel" text="0" style="-fx-text-fill: #1d0e4d;"/>
                <Label text="Losses:" style="-fx-text-fill: #1d0e4d;"/>
                <Label fx:id="friendLossesLabel" text="0" style="-fx-text-fill: #1d0e4d;"/>
                <Label text="Ties:" style="-fx-text-fill: #1d0e4d;"/>
                <Label fx:id="friendTiesLabel" text="0" style="-fx-text-fill: #1d0e4d;"/>
            </HBox>
            <Label text="Game Stats" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1d0e4d;"/>
            <TableView fx:id="friendGameStatsTable" prefHeight="90" editable="false">
                <columns>
                    <TableColumn fx:id="friendGameColumn" text="Game" prefWidth="180"/>
                    <TableColumn fx:id="friendGameWinsColumn" text="Wins" prefWidth="100"/>
                    <TableColumn fx:id="friendGameLossesColumn" text="Losses" prefWidth="100"/>
                    <TableColumn fx:id="friendGameTiesColumn" text="Ties" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
