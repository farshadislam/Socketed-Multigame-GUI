<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="517.0" prefWidth="700" styleClass="gradient-background"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.2"
            fx:controller="org.seng.gui.FriendProfileController">


    <children>
        <VBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="friendProfileTitleText" styleClass="title-label" text="Friend's Profile" />
                <Region HBox.hgrow="ALWAYS" />
                <ImageView fx:id="backIcon" fitHeight="30" fitWidth="30" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <StackPane prefHeight="60" prefWidth="60">
                    <Circle fill="lightgray" radius="30" />
                    <!-- Optionally include an avatar picture -->
                    <ImageView fx:id="friendProfilePicture" fitHeight="60" fitWidth="60" preserveRatio="true" />
                </StackPane>
                <VBox spacing="5">
                    <Label fx:id="friendNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold" textFill="white"/>
                    <Label fx:id="friendLastOnlineLabel" textFill="white"/>
                </VBox>
            </HBox>
            <HBox spacing="15">
                <Label text="Total Matches:" style="-fx-font-weight: bold" textFill="white" />
                <Label fx:id="friendMatchesLabel" textFill="white"/>
                <Label text="Wins:" style="-fx-font-weight: bold" textFill="white"/>
                <Label fx:id="friendWinsLabel" textFill="white"/>
                <Label text="Losses:" style="-fx-font-weight: bold" textFill="white"/>
                <Label fx:id="friendLossesLabel" textFill="white"/>
                <Label text="Ties:" style="-fx-font-weight: bold" textFill="white"/>
                <Label fx:id="friendTiesLabel" textFill="white"/>
            </HBox>
            <Label style="-fx-font-weight: bold;" text="Game Stats" textFill="white"/>
            <TableView fx:id="friendGameStatsTable" prefHeight="120">
                <columns>
                    <TableColumn fx:id="friendGameColumn" text="Game" />
                    <TableColumn fx:id="friendWinsColumn" text="Wins" />
                    <TableColumn fx:id="friendLossesColumn" text="Losses" />
                    <TableColumn fx:id="friendTiesColumn" text="Ties" />
                </columns>
            </TableView>
            <Label style="-fx-font-weight: bold;" text="Game History" textFill="white"/>
            <TableView fx:id="friendGameHistoryTable" prefHeight="150.0" prefWidth="680.0">
                <columns>
                    <TableColumn fx:id="friendHistoryGameColumn" text="Game" />
                    <TableColumn fx:id="friendResultColumn" text="Result" />
                    <TableColumn fx:id="friendOpponentColumn" text="Opponent Type" />
                </columns>
            </TableView>
            <Button fx:id="challengePlayerButton"
                    text="Challenge Player"
                    onAction="#onChallengePlayerClicked"
                    styleClass="auth-button"
                    AnchorPane.bottomAnchor="10"
                    AnchorPane.leftAnchor="10"
                    AnchorPane.rightAnchor="10" />

        </VBox>


    </children>
</AnchorPane>
