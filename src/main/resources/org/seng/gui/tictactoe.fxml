<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="gradient-background"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.seng.gui.TicTacToeController">

   <!-- Title -->
   <Label text="Tic Tac Toe"
          styleClass="light-title-label"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          alignment="CENTER">
      <font>
         <Font size="36.0"/>
      </font>
   </Label>

   <!-- Turn label -->
   <Label fx:id="turnLabel"
          text="Player 1's Turn"
          styleClass="game-label"
          AnchorPane.topAnchor="70.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          alignment="CENTER" />
   <Label fx:id="timerLabel" text="Time: 10" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold" />

   <!-- Center container to hold the game board -->
   <StackPane AnchorPane.topAnchor="120.0"
              AnchorPane.bottomAnchor="80.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER">
      <GridPane fx:id="board" hgap="10" vgap="10" alignment="CENTER">
         <Button fx:id="button11" prefWidth="80" prefHeight="80" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button12" prefWidth="80" prefHeight="80" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button13" prefWidth="80" prefHeight="80" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button21" prefWidth="80" prefHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button22" prefWidth="80" prefHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button23" prefWidth="80" prefHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button31" prefWidth="80" prefHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button32" prefWidth="80" prefHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="tic-tac-toe-button"/>
         <Button fx:id="button33" prefWidth="80" prefHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="tic-tac-toe-button"/>
      </GridPane>
   </StackPane>

   <!-- Settings (top right) -->
   <MenuButton fx:id="SettingMenu"
               text="Settings"
               textFill="aliceblue"
               styleClass="menu-bar"
               AnchorPane.topAnchor="20.0"
               AnchorPane.rightAnchor="30.0">
      <items>
         <MenuItem fx:id="helpOption" onAction="#howToPlayDescription" text="Help"/>
         <MenuItem fx:id="quitOption" onAction="#handleQuit" text="Quit"/>
      </items>
   </MenuButton>

   <!-- Chat Button (bottom right) -->
   <Button fx:id="inGameChatButton"
           text="Chat"
           onAction="#openChat"
           styleClass="option-button"
           AnchorPane.bottomAnchor="20.0"
           AnchorPane.rightAnchor="30.0"/>
</AnchorPane>
