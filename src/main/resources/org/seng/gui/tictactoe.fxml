<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.seng.gui.TicTacToeController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="gradient-background">

   <!-- Title -->
   <Label text="Tic Tac Toe" styleClass="light-title-label"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          alignment="center"/>

   <!-- Turn Indicator -->
   <Label fx:id="turnLabel" text="Player 1's Turn" alignment="center"
          styleClass="game-label"
          AnchorPane.topAnchor="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>

   <!-- Game Board -->
   <GridPane hgap="10" vgap="10"
             AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="225.0">
      <Button fx:id="button11" prefWidth="80" prefHeight="80" />
      <Button fx:id="button12" prefWidth="80" prefHeight="80" GridPane.columnIndex="1"/>
      <Button fx:id="button13" prefWidth="80" prefHeight="80" GridPane.columnIndex="2"/>

      <Button fx:id="button21" prefWidth="80" prefHeight="80" GridPane.rowIndex="1"/>
      <Button fx:id="button22" prefWidth="80" prefHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
      <Button fx:id="button23" prefWidth="80" prefHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

      <Button fx:id="button31" prefWidth="80" prefHeight="80" GridPane.rowIndex="2"/>
      <Button fx:id="button32" prefWidth="80" prefHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      <Button fx:id="button33" prefWidth="80" prefHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
   </GridPane>

   <!-- Chat and Settings -->
   <Button fx:id="inGameChatButton" text="Chat" styleClass="auth-button"
           AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" onAction="#openChat"/>

   <MenuButton fx:id="SettingMenu" text="Settings" styleClass="auth-button"
               AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="50.0">
      <items>
         <MenuItem text="Quit"/>
         <MenuItem fx:id="helpOption" text="Help" onAction="#howToPlayDescription"/>
      </items>
   </MenuButton>
</AnchorPane>
