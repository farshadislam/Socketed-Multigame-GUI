<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="gradient-background"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.seng.gui.TicTacToeController">

   <children>

      <Text layoutX="320.0" layoutY="50.0" fill="white" strokeType="OUTSIDE" strokeWidth="0.0"
            styleClass="light-title-label" text="Tic Tac Toe" textAlignment="CENTER">
         <font>
            <Font size="28.0"/>
         </font>
      </Text>

      <Label fx:id="turnLabel" layoutX="330.0" layoutY="80.0"
             styleClass="game-label" text="Player 1's Turn" textFill="white"/>

      <FlowPane fx:id="board" layoutX="250.0" layoutY="120.0"
                prefHeight="280.0" prefWidth="300.0" hgap="10" vgap="10">
         <children>
            <Button fx:id="button11" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button12" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button13" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button21" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button22" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button23" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button31" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button32" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
            <Button fx:id="button33" styleClass="tic-tac-toe-button" prefHeight="80.0" prefWidth="80.0"/>
         </children>
      </FlowPane>

      <Button fx:id="inGameChatButton"
              text="Chat"
              onAction="#openChat"
              styleClass="option-button"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0"/>

      <MenuButton fx:id="SettingMenu"
                  text="Settings"
                  textFill="aliceblue"
                  styleClass="menu-bar"
                  AnchorPane.topAnchor="20.0"
                  AnchorPane.rightAnchor="20.0">
         <items>
            <MenuItem fx:id="helpOption" onAction="#howToPlayDescription" text="Help"/>
            <MenuItem fx:id="quitOption" onAction="#handleQuit" text="Quit"/>
         </items>
      </MenuButton>

   </children>
</AnchorPane>
