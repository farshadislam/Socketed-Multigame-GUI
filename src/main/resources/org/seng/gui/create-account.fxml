<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.seng.gui.CreateAccountController"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="gradient-background">

    <VBox alignment="center" spacing="15"
          AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0"
          AnchorPane.topAnchor="80.0">

        <Label fx:id="titleLabel" text="Create Your Account" styleClass="light-title-label"/>

        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
        <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="input-field"/>

        <Label fx:id="errorLabel" text="" styleClass="error-message" visible="false"/>

        <HBox spacing="10" alignment="center">
            <Button fx:id="backButton" text="Back" styleClass="auth-button"/>
            <Button fx:id="registerButton" text="Register" styleClass="auth-button"/>
        </HBox>
    </VBox>
</AnchorPane>

