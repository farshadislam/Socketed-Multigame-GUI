<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.seng.gui.ForgotPasswordController"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="gradient-background">

    <VBox alignment="center" spacing="15"
          styleClass="login-box"
          AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0"
          AnchorPane.topAnchor="150.0">

        <Label text="Reset Your Password" styleClass="light-title-label"/>

        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field"/>

        <HBox spacing="10" alignment="center">
            <Button fx:id="resetButton" text="Send Reset Link" styleClass="auth-button"/>
            <Button fx:id="backButton" text="Back" styleClass="auth-button"/>
        </HBox>

        <Label fx:id="messageLabel" styleClass="message-label"/>
    </VBox>
</AnchorPane>
